<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <RadioGroup
        android:gravity="center"
        android:id="@+id/week_of_month"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/search2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="48dp" >

        <TextView
            android:id="@+id/week_of_month_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/week_of_month_text"
            />

        <RadioButton
            android:id="@+id/week_no_restriction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_week_default" />

        <RadioButton
            android:id="@+id/odd_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_week_odd" />

        <RadioButton
            android:id="@+id/even_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_week_even" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>